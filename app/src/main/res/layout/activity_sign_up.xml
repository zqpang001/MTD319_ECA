<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SignUpActivity">

    <TextView
        android:id="@+id/signUp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="90dp"
        android:text="Sign Up"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.161"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:textColor="@color/teal_600"
        android:textSize="40dp"/>

    <TextView
        android:id="@+id/userName_SignUp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="Username"
        app:layout_constraintStart_toStartOf="@+id/signUp"
        app:layout_constraintTop_toBottomOf="@+id/signUp" />

    <EditText
        android:id="@+id/userName_SignUp_TxtField"
        android:layout_width="300dp"
        android:layout_height="35dp"
        android:layout_marginTop="15dp"
        android:background="#FFF1F2F2"
        android:ems="10"
        android:inputType="textPersonName"
        android:text=""
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/userName_SignUp" />

    <TextView
        android:id="@+id/email_SignUp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Email"
        app:layout_constraintStart_toStartOf="@+id/userName_SignUp"
        app:layout_constraintTop_toBottomOf="@+id/userName_SignUp_TxtField" />

    <EditText
        android:id="@+id/email_SignUp_TxtField"
        android:layout_width="300dp"
        android:layout_height="35dp"
        android:layout_marginTop="15dp"
        android:ems="10"
        android:background="#FFF1F2F2"
        android:inputType="textPersonName"
        android:text=""
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/email_SignUp" />

    <TextView
        android:id="@+id/password_SignUp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Password"
        app:layout_constraintStart_toStartOf="@+id/email_SignUp"
        app:layout_constraintTop_toBottomOf="@+id/email_SignUp_TxtField" />

    <EditText
        android:id="@+id/password_SignUp_TxtField"
        android:layout_width="300dp"
        android:layout_height="35dp"
        android:layout_marginTop="15dp"
        android:ems="10"
        android:background="#FFF1F2F2"
        android:inputType="textPassword"
        android:text=""
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/password_SignUp" />

    <TextView
        android:id="@+id/cPassword_SignUp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Confirm password"
        app:layout_constraintStart_toStartOf="@+id/password_SignUp"
        app:layout_constraintTop_toBottomOf="@+id/password_SignUp_TxtField" />

    <EditText
        android:id="@+id/cPassword_SignUp_TxtField"
        android:layout_width="300dp"
        android:layout_height="35dp"
        android:layout_marginTop="15dp"
        android:ems="10"
        android:background="#FFF1F2F2"
        android:inputType="textPassword"
        android:text=""
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cPassword_SignUp" />



    <CheckBox
        android:id="@+id/agree_CheckBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="I agree with the privacy and policy."
        app:layout_constraintStart_toStartOf="@+id/password_SignUp"
        app:layout_constraintTop_toBottomOf="@+id/cPassword_SignUp_TxtField" />

    <Button
        android:id="@+id/SignUp_Btn"
        android:layout_width="300dp"
        android:layout_height="30dp"
        android:layout_marginTop="20dp"
        android:background="@color/teal_600"
        android:text="Sign Up"
        android:textAllCaps="false"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        android:onClick="clickSignUpBtn"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/agree_CheckBox" />

    <TextView
        android:id="@+id/alreadyAccount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginBottom="55dp"
        android:text="Already have an account?"
        app:layout_constraintStart_toStartOf="@+id/agree_CheckBox"
        app:layout_constraintBottom_toBottomOf="parent"  />

    <Button
        android:id="@+id/already_SignIn_Button"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:background="@android:color/transparent"
        android:text="Sign In"
        android:textColor="@color/teal_600"
        android:layout_marginBottom="40dp"
        app:layout_constraintStart_toEndOf="@+id/alreadyAccount"
        app:layout_constraintBottom_toBottomOf="parent"
        android:textAllCaps="false"
        android:onClick="signIn"/>

</androidx.constraintlayout.widget.ConstraintLayout>